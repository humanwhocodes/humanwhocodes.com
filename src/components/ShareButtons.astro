---
const { post } = Astro.props;

const postUrl = `https://humanwhocodes.com/blog/${post.slug}`;
const postTitle = encodeURIComponent(post.data.title);
const postText = encodeURIComponent(post.data.teaser);

const shareLinks = {
    twitter: `https://twitter.com/intent/tweet?text=${postTitle}&url=${postUrl}`,
    linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${postUrl}`,
    facebook: `https://www.facebook.com/sharer/sharer.php?u=${postUrl}`,
    reddit: `https://reddit.com/submit?url=${postUrl}&title=${postTitle}`,
    hackernews: `https://news.ycombinator.com/submitlink?u=${postUrl}&t=${postTitle}`
};
---

