---
import Layout from '../../../layouts/Layout.astro';
import PostBlurb from '../../../components/PostBlurb.astro';
import slugify from "slugify";
import { getCollection } from 'astro:content';
import { formatJekyllPost } from "@humanwhocodes/astro-jekyll";

export async function getStaticPaths() {
    
	const posts = (await getCollection('blog'))
		.map(formatJekyllPost())
        .sort(
	    	(a, b) => a.data.pubDate - b.data.pubDate
    	);

    const postTags = new Map();
    posts.forEach(post => {

        if (post.data.tags) {
            for (const tag of post.data.tags) {
        
                if (!postTags.get(tag)) {
                    postTags.set(tag, []);
                }
        
                postTags.get(tag).push(post);

            }
        }
    });

    return [...postTags.entries()].map(([tag, posts]) => ({
        params: { tag: slugify(tag.toLowerCase()) },
        props: { posts, tag }
    }));

};

const { posts, tag } = Astro.props;
---
<Layout
	title={`Posts tagged with "${tag}"`}
>	
	<h2 class="no-margin">Posts tagged with "{tag}"</h2>

	{posts.map((post) => (
		<PostBlurb
			title={post.frontmatter.title}
			teaser={post.frontmatter.teaser}
			date={post.frontmatter.date}
			url={post.url}
		/>
	))}


</Layout>
