---
import Layout from '../../layouts/Layout.astro';
import PostBlurb from '../../components/PostBlurb.astro';
import { loadBlogPosts } from "../../lib/util.js";
import site from "../../data/config.yml";
import Pagination from '../../components/Pagination.astro';

import { getCollection } from 'astro:content';
import { formatJekyllPost } from "@humanwhocodes/astro-jekyll";

export async function getStaticPaths({ paginate }) {
    
	const posts = (await getCollection('blog'))
		.map(formatJekyllPost())
		.reverse()
		.filter(post => !post.data.draft && (post.data.date - new Date()))
        // .sort(
	    // 	(a, b) => b.data.pubDate - a.data.pubDate
    	// );

    return paginate(posts, { pageSize: 10 });

};

const { page } = Astro.props;
---
<Layout
	title={site.name}
	description={site.description}
>	
	<h2 class="no-margin">Recent Posts</h2>

	{page.data.map((post) => (
		<PostBlurb post={post}/>
	))}

	<Pagination next={page.url.next} prev={page.url.prev} />

</Layout>
